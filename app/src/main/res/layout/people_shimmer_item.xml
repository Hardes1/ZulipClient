<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/people_small_spacing_recycler_view"
    >

    <View
        android:id = "@+id/avatar_icon_view"
        android:layout_width="80dp"
        android:layout_marginStart="15dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rounder_shimmer_item"
        app:layout_constraintStart_toStartOf="parent"/>


    <View
        android:id = "@+id/online_status"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="@id/avatar_icon_view"
        app:layout_constraintBottom_toBottomOf="@id/avatar_icon_view"
        android:background="@drawable/rounder_shimmer_item"
        />


    <View
        android:id="@+id/name_text_view"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="100dp"
        android:background="@color/icon_not_selected_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/avatar_icon_view"
        tools:text="Darrel steward"
        />

    <View
        android:id ="@+id/email_view"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="45dp"
        android:background="@color/icon_not_selected_color"
        app:layout_constraintBottom_toBottomOf="@id/avatar_icon_view"
        app:layout_constraintStart_toStartOf="@id/name_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_text_view"
        />



</androidx.constraintlayout.widget.ConstraintLayout>